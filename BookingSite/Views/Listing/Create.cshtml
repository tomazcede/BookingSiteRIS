@model BookingSite.Model.Listingi

@{
    ViewData["Title"] = "Create Listing";
}

<h2>Create Listing</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Neprimicnina.Naslov" class="control-label">Property Address</label>
                    <input asp-for="Neprimicnina.Naslov" class="form-control" />
                    <span asp-validation-for="Neprimicnina.Naslov" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DatumOd" class="control-label">From Date</label>
                    <input asp-for="DatumOd" class="form-control" type="date" />
                    <span asp-validation-for="DatumOd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DatumDo" class="control-label">To Date</label>
                    <input asp-for="DatumDo" class="form-control" type="date" />
                    <span asp-validation-for="DatumDo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opis" class="control-label">Description</label>
                    <textarea asp-for="Opis" class="form-control"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SlikaUrl" class="control-label">Image URL</label>
                    <input asp-for="SlikaUrl" class="form-control" />
                    <span asp-validation-for="SlikaUrl" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Create</button>
            </form>
        </div>
    </div>
</div>


