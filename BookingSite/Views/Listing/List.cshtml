@model List<BookingSite.Model.Listingi>

@{
    ViewData["Title"] = "Listings";
}

<h2>Available Listings</h2>

<div class="row">
    <!-- Listing 1 -->
    <div class="col-md-4">
        <div class="card mb-4">
            <img class="card-img-top" src="https://cdn.onekindesign.com/wp-content/uploads/2016/11/Contemporary-Mountain-Retreat-Berglund-Architects-01-1-Kindesign.jpg" alt="Listing Image">
            <div class="card-body">
                <h5 class="card-title">Mountain Retreat, 1234 Highland Rd</h5>
                <p class="card-text">Beautiful mountain retreat with stunning views.</p>
                <p class="card-text">1.01.2024 - 1.11.2024</p>
                <a href="@Url.Action("Index", "Listing", new { id = 1 })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    <!-- Listing 2 -->
    <div class="col-md-4">
        <div class="card mb-4">
            <img class="card-img-top" src="https://images.squarespace-cdn.com/content/v1/59e362d79f8dce1fae530988/1623838448417-VAAUP15MFX5Z1D89P06O/redwood.jpg" alt="Listing Image">
            <div class="card-body">
                <h5 class="card-title">Forest Cabin, 5678 Woodland Dr</h5>
                <p class="card-text">Serene forest cabin perfect for a quiet getaway.</p>
                <p class="card-text">10.05.2024 - 30.05.2024</p>
                <a href="@Url.Action("Index", "Listing", new { id = 2 })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    <!-- Listing 3 -->
    <div class="col-md-4">
        <div class="card mb-4">
            <img class="card-img-top" src="https://www.phillymag.com/wp-content/uploads/sites/3/2019/07/tiny-beach-house-lede.jpg" alt="Listing Image">
            <div class="card-body">
                <h5 class="card-title">Beach House, 910 Seaside Ave</h5>
                <p class="card-text">Relaxing beach house with direct access to the shore.</p>
                <p class="card-text">15.06.2024 - 20.06.2024</p>
                <a href="@Url.Action("Index", "Listing", new { id = 3 })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    <!-- Listing 4 -->
    <div class="col-md-4">
        <div class="card mb-4">
            <img class="card-img-top" src="https://img.zumpercdn.com/486165561/1280x960" alt="Listing Image">
            <div class="card-body">
                <h5 class="card-title">NYC Apartment, 789 Manhattan Blvd</h5>
                <p class="card-text">Modern apartment in the heart of New York City.</p>
                <p class="card-text">22.05.2024 - 31.05.2024</p>
                <a href="@Url.Action("Index", "Listing", new { id = 4 })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    <!-- Listing 5 -->
    <div class="col-md-4">
        <div class="card mb-4">
            <img class="card-img-top" src="https://www.vacation-key.com/photos/1/2/127664-6.jpg" alt="Listing Image">
            <div class="card-body">
                <h5 class="card-title">Paris Flat, 123 Champs-Élysées</h5>
                <p class="card-text">Charming flat with a view of the Eiffel Tower.</p>
                <p class="card-text">01.07.2024 - 15.07.2024</p>
                <a href="@Url.Action("Index", "Listing", new { id = 5 })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    <!-- Listing 6 -->
    <div class="col-md-4">
        <div class="card mb-4">
            <img class="card-img-top" src="https://www.tokyo-hotels-now.com/data/Pics/OriginalPhoto/6350/635060/635060655/pic-m4-loft-shibuya-tokyo-6.JPEG" alt="Listing Image">
            <div class="card-body">
                <h5 class="card-title">Tokyo Loft, 456 Shibuya St</h5>
                <p class="card-text">Stylish loft in Tokyo's bustling Shibuya district.</p>
                <p class="card-text">01.08.2024 - 10.08.2024</p>
                <a href="@Url.Action("Index", "Listing", new { id = 6 })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    @foreach (var listing in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img class="card-img-top" src="@listing.SlikaUrl" alt="Listing Image">
                <div class="card-body">
                    <h5 class="card-title">@listing.Neprimicnina.Naslov</h5>
                    <p class="card-text">@listing.Opis</p>
                    <p class="card-text">@listing.DatumOd?.ToString("d") - @listing.DatumDo?.ToString("d")</p>
                    <a href="@Url.Action("Index", "Listing", new { id = listing.ListingId })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

